{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@generated/*": [
        "./node_modules/@generated/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018"
  }
}
